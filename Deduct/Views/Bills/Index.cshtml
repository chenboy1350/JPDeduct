@section Scripts {
    <script>
        function showSendDoc(element, sendDoc) {
            console.log(sendDoc);

            // Remove background color from all rows (all td elements)
            var rows = document.querySelectorAll('#tblHDeduct tbody tr');
            rows.forEach(function(row) {
                var cells = row.querySelectorAll('td');
                cells.forEach(function(cell) {
                    cell.style.backgroundColor = '';
                    cell.style.color = '';
                });
            });

            // Apply background color to all td in clicked element
            var clickedCells = element.querySelectorAll('td');
            clickedCells.forEach(function(cell) {
                cell.style.backgroundColor = '#0D6EFD';
                cell.style.color = '#FFFFFF';
            });
        }
    </script>
}
